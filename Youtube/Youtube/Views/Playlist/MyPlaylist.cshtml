@model IEnumerable<YoutubeEntity.Class.Playlist>

@{
    ViewBag.Title = "MyPlaylist";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}
<div class="container">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-white">My Playlist</h1>
            </div>
        </div>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Details)
                </th>
         
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>*@
                    <td>
                       <a href="/PlaylistVideo/PlaylistSongs/@item.Id" style="color:blue">@Html.DisplayFor(modelItem => item.Name)</a> 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
              
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |                    
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>