@model YoutubeEntity.Class.Video

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}


<div class="container">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-danger">Are you sure you want to delete this?</h1>
            </div>
        </div>

        <div>

            <hr />
            <dl class="dl-horizontal">


                <dd>
                    <div id="videosList">
                        <div class="video">
                            <video width="320" poster="@Model.Poster" height="240" class="thevideo uploaded-video" loop preload="none">
                                <source src="@Model.VideoURL" type="video/mp4">
                            </video>
                        </div>
                    </div>
                </dd>



                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UploadTime)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UploadTime)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ViewCount)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ViewCount)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Type)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Type)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Tag)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Tag)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                @Html.HiddenFor(model => model.Id)

                @Html.HiddenFor(model => model.ChannelId)

                @*@Html.HiddenFor(model => model.UploadTime)
                    @Html.HiddenFor(model => model.VideoURL)
                    @Html.HiddenFor(model => model.ViewCount)
                    @Html.HiddenFor(model => model.Title)
                    @Html.HiddenFor(model => model.Description)
                    @Html.HiddenFor(model => model.Type)
                    @Html.HiddenFor(model => model.Tag)*@

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>


            }
        </div>

    </div>
</div>
