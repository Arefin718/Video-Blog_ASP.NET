@model YoutubeEntity.Class.Video

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}

<div class="container">
    <div class="col-md-12">


        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-white">Upload New Video</h1>
            </div>
        </div>



        
    @using (Html.BeginForm("Insert", "Video", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
       
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.VideoURL,"Video", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" accept="video/*" class="form-control" required name="VideoURL"/>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select class="form-control"  name="Type">
                            <option>Music</option>
                            <option>News</option>
                            <option>Gaming</option>
                            <option>Sports</option>
                            <option>Tutorials</option>
                            <option>360</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>

                <input type="hidden" name="ChannelId" value="@Convert.ToInt32(TempData["ChannelId"])"/>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Poster, "Poster", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" class="form-control" required name="Poster" />
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-6 col-md-2">
                        <input type="submit" value="Upload" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>
