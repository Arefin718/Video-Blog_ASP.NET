@model IEnumerable<YoutubeEntity.Class.PlaylistVideo>

@{
    ViewBag.Title = "PlaylistSongs";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}

<div class="container">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-white">Playlist Songs</h1>
            </div>
        </div>


        <table class="table">
            <tr>
                <th>
                    Song Name
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                       <a style="color: blue" href="/video/view/@item.VideoId">@Html.DisplayFor(modelItem => item.Video.Title)</a>
                    </td>
                    <td>

                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
