@model YoutubeEntity.Class.Channel

@{
    ViewBag.Title = "Deactive";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}

<div class="container">
    <div class="col-md-12">

        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-white">Are you sure you want to delete this channel?</h1>
            </div>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

               
                <table>
                    <tr>
                        <td>Channel Name </td>
                        <td>@Model.ChannelName</td>
                    </tr>
                    <tr>
                        <td>Channel Type </td>
                        <td>@Model.ChannelType</td>
                    </tr>
                    <tr>
                        <td>Subscriber </td>
                        <td>@Model.TotalSubscriber</td>
                    </tr>
                </table>

                <div class="form-group">
                    <div class="col-md-offset-6 col-md-2">
                        <input type="submit" value="Deactive" class="btn btn-danger" />
                    </div>
                </div>

            </div>
        }



    </div>
</div>
