@model IEnumerable<YoutubeEntity.Class.Channel>

@{
    ViewBag.Title = "MyChannel";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}

<div class="container">
    <div class="col-md-12">


        <div class="row">
            <div class="col-md-12 text-center">
                <h1 class="text-white">My Channels</h1>
            </div>
        </div>


        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                 <th>
                    @Html.DisplayNameFor(model => model.ChannelName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.ChannelType)
                </th>
                <th>
                    Total Subscriber
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                       <a style="color:blue" href="/video/allvideo/@item.Id">@Html.DisplayFor(modelItem => item.ChannelName)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChannelType)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.TotalSubscriber)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                       @* @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
