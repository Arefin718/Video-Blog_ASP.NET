                    <td><input type="hidden" id="clientId" value="@ViewData["ClientId"]"/></td>
                    <td><button id="formSubmit">Call</button></td>
                </tr>
                <tr>
                    <td><input type="hidden" id="RedirectURL" value="@ViewData["RedirectURL"]" /></td> 
                </tr>

            </table>
        
        </div>

        <script src="~/Scripts/jquery-3.2.1.min.js"></script>

        <script src="~/Scripts/temp.js"></script>

