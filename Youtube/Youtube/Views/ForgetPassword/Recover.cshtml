@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_Navigation.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="bg-info text-white">Recovery Email</h1>
        </div>
    </div>
    
    <form method="post">

        <div class="form-group">
          <label class = "col-md-3 h1">Email</label>
            <div class="col-md-9">
                <div class="ui-widget">
                    <input class="form-control" type="email" name="UserEmail" />
                </div>
            </div>
       </div>

        <div class="form-group">
            <div class="col-sm-12">
                <h1 style="color:red; text-align:center;">@TempData["EmailNotExist"]</h1>
            </div>
        </div>


            <div class="form-group">
                <div class="col-md-offset-5 col-md-2">
                    <input type="submit" value="Recover" class="btn btn-default" />
                </div>
            </div>

    </form>

    </div>

