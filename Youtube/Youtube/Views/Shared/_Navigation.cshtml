                    </a>
                </div>
            </li>
                                *@
                                <li>
                                    <a href="#" class="all_notifications">All Notifications</a>
                                </li>
                            </ul>

                        </li>
                    </ul>
                </div>
                            
          
                    <div class="col-lg-2 col-md-2 col-sm-3 hidden-xs hidden-sm">
                        <div class="dropdown">
                            <a data-toggle="dropdown" href="#" class="user-area">
                                <div class="thumb"><img src="@Session["UserImage"]" alt=""></div>
                                <h2>@Session["UserName"]</h2>
                                <h3>25 subscribers</h3>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu account-menu">
                                <li><a href="/profile/edit"><i class="fa fa-edit color-1"></i>Edit profile</a></li>
                                <li><a href="/profile/ChangeProfilePicture"><i class="fa fa-edit color-1"></i>Change Photo</a></li>
                                <li><a href="/profile/ChangePassword"><i class="fa fa-edit color-1"></i>Change Password</a></li>
                                <li><a href="/playlist/myplaylist"><i class="fa fa-clock-o"></i>Manage Playlist</a></li>
