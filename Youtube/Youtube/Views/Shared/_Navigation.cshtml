                        <li class="dropdown">
                            <a href="#" data-toggle="dropdown">
                                <i class="fa fa-bell-o" id="showNotification"></i>
                                <span class="badge badge-color3 header-badge" id="totalNotification"></span>
                            </a>
                            <ul style="overflow:scroll; height:400px;"  class="dropdown-menu dropdown-notifications-items" id="notificationList">
