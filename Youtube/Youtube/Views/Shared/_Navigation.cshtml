                                <li><a href="/user/logout"><i class="fa fa-sign-out color-4"></i>sign out</a></li>
                            </ul>
                        </div>
                    </div>
                }
                else
                {
                    <div style="float: right" class="col-lg-2 col-md-2 col-sm-3 hidden-xs hidden-sm">
                        <a class="h4 text-white text-right"  href="/user/login"><h2>Login</h2> </a>
                    </div>
                }
            }

                
            </div><!-- // row -->

            <div class="row">
                <div class="col-md-2"></div>
                <div class="searchResult col-md-3">
                    <ul id="searchedResultViewArea">
                        
               
                    
                    </ul>
                </div>
            </div>
        </div><!-- // container-full -->
    </header>

    <div id="main-category">
        <div class="container-full">
            <div class="row">
                <div class="col-md-12">
                    <ul class="main-category-menu">
